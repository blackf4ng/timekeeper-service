{
  "openapi": "3.1.0",
  "info": {
    "title": "OpenAPI definition",
    "version": "v0"
  },
  "servers": [
    {
      "url": "http://localhost",
      "description": "Generated server url"
    }
  ],
  "paths": {
    "/v1/scans": {
      "get": {
        "tags": [
          "scan-controller"
        ],
        "summary": "Paginated API for listing all scans for the calling user",
        "operationId": "listScanSummaries",
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "description": "Status of scans to filter on; not providing a status will return all statuses",
            "required": false,
            "schema": {
              "type": "string",
              "description": "Enum of scan result statuses",
              "enum": [
                "SUBMITTED",
                "PROCESSING",
                "FAILED",
                "DONE"
              ]
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "0-indexed page offset for pagination",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 0
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "description": "Number of items to query per page",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PageScanSummary"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "scan-controller"
        ],
        "summary": "Creates a scan for the provided URL",
        "description": "Input URL must be of a valid URL format",
        "operationId": "createScan",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateScanRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Scan"
                }
              }
            }
          }
        }
      }
    },
    "/v1/scans/{scanId}": {
      "get": {
        "tags": [
          "scan-controller"
        ],
        "summary": "Retrieves a scan by ID",
        "operationId": "getScan",
        "parameters": [
          {
            "name": "scanId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Scan"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "scan-controller"
        ],
        "summary": "Deletes a scan by ID",
        "operationId": "deleteScan",
        "parameters": [
          {
            "name": "scanId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateScanRequest": {
        "type": "object",
        "description": "Request for creating a scan",
        "properties": {
          "url": {
            "type": "string",
            "description": "URL to scan"
          }
        }
      },
      "Scan": {
        "type": "object",
        "description": "Includes details on the scan request and the result of the scan",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "ID of the scan"
          },
          "result": {
            "$ref": "#/components/schemas/ScanResult",
            "description": "Details of the scan result"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of when the scan was created"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of when the scan was last updated"
          }
        }
      },
      "ScanResult": {
        "type": "object",
        "description": "Includes details on the result of a scan",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "ID of the scan result"
          },
          "urlScanId": {
            "type": "string",
            "description": "ID of the scan provided by urlscan.io"
          },
          "url": {
            "type": "string",
            "description": "URL that was scanned"
          },
          "resultUrl": {
            "type": "string",
            "description": "URL of a web view of the result"
          },
          "status": {
            "type": "string",
            "description": "Status of the scan result",
            "enum": [
              "SUBMITTED",
              "PROCESSING",
              "FAILED",
              "DONE"
            ]
          },
          "statusDetails": {
            "$ref": "#/components/schemas/StatusDetails",
            "description": "Details of status of the scan; present only if status is FAILED"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of when the scan result was created"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of when the scan result was last updated"
          }
        }
      },
      "StatusDetails": {
        "type": "object",
        "description": "Details on the status of the scan result",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32",
            "description": "Code of the exception that was encountered"
          },
          "message": {
            "type": "string",
            "description": "Short message about the exception that was encountered"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the exception that was encountered"
          }
        }
      },
      "PageScanSummary": {
        "type": "object",
        "description": "A single page returned a part of a paginated list",
        "properties": {
          "data": {
            "type": "array",
            "description": "List of elements in the current page",
            "items": {
              "$ref": "#/components/schemas/ScanSummary"
            }
          },
          "totalElements": {
            "type": "integer",
            "format": "int64",
            "description": "Total number of elements in the full result"
          },
          "page": {
            "type": "integer",
            "format": "int32",
            "description": "0-indexed current page number"
          },
          "totalPages": {
            "type": "integer",
            "format": "int32",
            "description": "Total number of pages in the full result"
          }
        }
      },
      "ScanSummary": {
        "type": "object",
        "description": "Summary of a scan request without result details",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "ID of the scan"
          },
          "url": {
            "type": "string",
            "description": "URL "
          },
          "status": {
            "type": "string",
            "description": "Status of the scan result",
            "enum": [
              "SUBMITTED",
              "PROCESSING",
              "FAILED",
              "DONE"
            ]
          },
          "statusDetails": {
            "$ref": "#/components/schemas/StatusDetails",
            "description": "Details of status of the scan; present only if status is FAILED"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of when the scan was created"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of when the scan was last updated"
          }
        }
      }
    }
  }
}